<%- include ("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= hotel.name %></h1>
        <div style="width:30%; margin: 25px auto;">
        <form action="/hotels/<%= hotel._id %>/?_method=PUT" method="POST" enctype="multipart/form-data" style="position: relative; top: 5px;">
            <div class="form-group">
                <input class="form-control"type="text" placeholder="name" name="name" value="<%= hotel.name %>">
            </div>
            <div class="form-group">
                <input class="form-control"type="text" name="placename" value="<%= hotel.placename %>">
            </div>
            <div class="form-group">
                <input class="form-control"type="number" name="price" value="<%= hotel.price %>" min="0.5" step="0.5">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" id="image" name="image" accept="image/*">
            </div>
    <div class="form-group">
        <input class="form-control"type="text" placeholder="description" name="description" value="<%= hotel.description %>">
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Update!</button>
      </div>    
    </form>
    <br>
    <a href="/hotels">Go Back</a>
    </div>    
    </div>
</div>

<%- include ("../partials/footer") %>
