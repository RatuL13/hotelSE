<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= user.firstName%> <%=user.lastName%></h1>
        <div style="width:30%; margin: 25px auto;">
        <form action="/users/<%= user._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input class="form-control"type="text" name="username" value="<%= user.username%>">
            </div>
    <div class="form-group">
      <input class="form-control" type="text" value="<%= user.firstName%>" name="first_name">
  </div>
  <div class="form-group">
      <input class="form-control" type="text" value="<%= user.lastName%>" name="last_name">
  </div>
  <div class="form-group">
      <input class="form-control" type="email" value="<%= user.email%>" name="email">
  </div>
  <div class="form-group">
    <label for="image">Profile-Image</label>
    <input type="file" id="image" name="profileimage" accept="image/*">
</div>
    <div class="form-group">
      <input class="form-control" type="password" name="adminCode" placeholder="Admin Code">
  </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block">Update!</button>
      </div>    
    </form>
    </div>    
    </div>
</div>

<%- include ("../partials/footer") %>

