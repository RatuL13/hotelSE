<%- include ("partials/header") %>

<div class="container" style="position: relative; top: 45px;">
    <div class="row">
        <h1 style="text-align: center; position: relative; bottom: 10px;">Contact Form</h1>
        <div style="width:30%; margin: 25px auto;">
        <form action="/contact" method="POST" style="position: relative; top: 5px;">
            <div class="form-group">
              <label for="name">Name</label>
                <input class="form-control"type="text" id="name" placeholder="name" name="name" required>
            </div>
            <div class="form-group">
              <label for="email">Email</label>
                <input class="form-control"type="email" id="email" placeholder="email" name="email" required>
            </div>
            <div class="form-group">
              <label for="message">Message </label>
                <textarea class="form-control" name="message" id="message" cols="50" rows="5" placeholder="message" required></textarea>
            </div>
    <div class="form-group">
        <button class="btn btn-lg btn-success btn-block">Submit</button>
      </div>    
    </form>
    <a href="/hotels">Go Back</a>
    </div> 
    </div>
</div>
</div>
